<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id = "@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="600dp"
        android:maxHeight="600dp"
        android:scaleType="fitStart"
        android:layout_marginLeft="3dp"
        tools:src="@drawable/p1"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        style="@style/PresidentInfo"

        tools:text="NAME"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/name"
        android:layout_alignParentRight="true"
        style="@style/PresidentInfo"

        tools:text="NUMBER"/>


    <TextView
        android:id="@+id/birthDateDeathDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/name"
        style="@style/PresidentInfo"

        tools:text="BIRTHDATEDEATHDATE"/>

    <TextView
        android:id="@+id/tookOfficeLeftOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/birthDateDeathDate"
        android:layout_alignParentRight="true"
        android:layout_below="@id/number"
        style="@style/PresidentInfo"

        tools:text="TOOKOFFICELEFTOFFICE"/>

    <TextView
        android:id="@+id/party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="PARTY"
        style="@style/PresidentInfo"

        android:layout_below="@+id/birthDateDeathDate"/>
</RelativeLayout>